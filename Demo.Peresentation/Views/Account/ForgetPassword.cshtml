

@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<h1>ForgetPassword</h1>
<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="SendResetPasswordUrl" method="post">
				<div asp-validation-summary="All"></div>
				<input class="text email" asp-for="Email" placeholder="Email" required="">
			
				<input type="submit" value="Search">
			</form>
			<p>Don't Have an Account? <a asp-action="Register"> Register</a></p>
		</div>
	</div>
</div>
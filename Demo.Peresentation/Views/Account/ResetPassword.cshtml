@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<h1>ResetPassword</h1>
<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="ResetPassword" method="post">
				<div asp-validation-summary="All"></div>
				<input class="text" asp-for="Password" placeholder="Password" required="">
				<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
				<input type="submit" value="Reset Password">
			</form>
			<p>Have an Account? <a asp-action="LogIn"> Login Now!</a></p>
		</div>
	</div>
</div>
